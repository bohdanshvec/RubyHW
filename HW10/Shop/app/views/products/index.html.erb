<div class="col-2 flex-shrink-0 p-3 text-white bg-dark">

  <div class="category">
    <h2>Categories:</h2>
  </div>
    <ul class="nav nav-pills flex-column mb-auto">
      <% @categories.each do |category| %>
        <li class="nav-item">
          <h3><%= link_to "#{category.title}", category_path(category) %></h3>
        </li>
      <% end %>
    </ul> 
</div>

<div id="viewport">
  <!-- Content -->
  <div id="content">
    <div class="container-fluid">
      <div class="row">
        <h3 class="text-center">Our Collection</h3>
      </div>
      <div class="row">
        <% @products.each do |product| %>
          <%= link_to product, class: "card p-0 mt-3 mx-auto shadow-sm" do %>
          <img src=<%= product.image %> class="card-img-top" alt=<%= product.name %>>
          <% end %>
            <div class="card-body px">
              <h5 class="card-title text-center"><%= product.name %></h5>
              <p class="card-price mt-auto text-end"><%= product.price.to_i %> грн.</p>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>