<div class='container cont2'>
  <h3>Our Collection</h3>
  <section class='cont'>
  <div id="products" class="row products">
    <div class='row-wrap-40px'>

      <% @products.each do |product| %>
        <div class='border p-2'>

          <%= link_to product do %>
            <%= image_tag((product.photo.attached? ? product.photo.variant(:medium) : 'plug.jpg'), alt: product.name) %>
          <% end %>

          <h5><%= product.name %></h5>
          <h5><%= number_to_currency(product.price) %></h5>

        <% if current_user %>
          <%= turbo_frame_tag dom_id(product) do %>
            <%= button_to 'Add to cart', line_items_path(product_id: product.id), class: 'btn btn-outline-light me-2 mb-3 mt-3' %>
          <% end %>
        <% end %>


        </div>

      <% end %>

    </div>
  </div>
  </section>
</div>