<div class='col-2 flex-shrink-0 p-3 text-white size-100vh-max' style='background-color: #e3f2fd;'>
  <div class='category'>
    <h4>Categories:</h4><br />
  </div>
  <ul class='nav nav-pills flex-column mb-auto'>
    <% @categories.each do |category| %>
      <li class='nav-item mb-3'>
        <%= link_to category.title, products_path(query: "#{category.id}") %>
      </li>
    <% end %>
  </ul>
</div>