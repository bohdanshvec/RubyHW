<div class='container'>  
  <br>
  <h1>Your Order â„– <%= @order.id %></h1>
  <table class='table'>
    <tr>
      <th scope='col'>#</th>
      <th scope='col'>Image</th>
      <th scope='col'>Name</th>
      <th scope='col'>Quantity</th>
      <th scope='col'>Price</th>
    </tr>

    <% @order.cart.line_items.includes(:product).each.with_index do |line_item, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= photo_display(line_item) %></td>
      <td><%= line_item.product.name %></td>
      <td><%= line_item.quantity %></td> 
      <td><%= number_to_currency(line_item.price) %></td>
    </tr>
    <% end %>

    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td>Total price : </td>
      <td><%= number_to_currency(@order.cart.line_items.map(&:price).sum) %></td>
    </tr>
  </table>
</div>

<h2>Thank you for choosing our store, we are waiting for you again.</h2>